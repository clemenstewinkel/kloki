    <w:tcPr>
        <w:tcW w:w="5269" w:type="dxa"/>
        <w:gridSpan w:val="3"/>
    </w:tcPr>
    <w:p>
        <w:r>
            <w:t>{{ include('klo_ki_event/_time_range.html.twig', {'event': e}) }}</w:t>
        </w:r>
    </w:p>
</w:tc>
<w:tc>
    <w:tcPr>
        <w:tcW w:w="1813" w:type="dxa"/>
