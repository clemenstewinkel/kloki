    <h1>{{ klo_ki_event.name }} ({{ klo_ki_event.room }})</h1>

    <table class="table table-sm">
        <tbody>
        {% if klo_ki_event.getProblemDetails %}
            <tr>
                <th>Warnungen</th>
                <td>
                    <a class="js-no-retarget" data-toggle="collapse" href="#event-problems-div" role="button" aria-expanded="false" aria-controls="collapseExample">
                        Zeige Warnungen ({{ klo_ki_event.getProblemDetails | length }})
                    </a>
                    <div class="collapse" id="event-problems-div">
                    <ul style="color: red;">
                        {% for problem in klo_ki_event.getProblemDetails %}
                           <li> {{ problem }} </li>
                        {% endfor %}
                    </ul>
                    </div>
                </td>
            </tr>
        {%  endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Status</th>
                <td>{{ klo_ki_event.isFixed ? 'fest' : 'optioniert' }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Beginn und Dauer</th>
                <td>{{ include('klo_ki_event/_time_range.html.twig', {'event': klo_ki_event}) }}</td>
            </tr>
            <tr>
                <th>Art:</th>
                <td>{{ klo_ki_event.art }} / {{ klo_ki_event.kategorie }}</td>
            </tr>
            <tr>
                <th>Anzahl der Künstler</th>
                <td>{{ klo_ki_event.anzahlArtists }}</td>
            </tr>
            <tr>
                <th>Bestuhlung nötig?</th>
                <td>{{ klo_ki_event.isBestBenoetigt ? 'Ja' : 'Nein' }}</td>
            </tr>
            <tr>
                <th>Licht nötig?</th>
                <td>{{ klo_ki_event.isLichtBenoetigt ? 'Ja' : 'Nein' }}</td>
            </tr>
            <tr>
                <th>Helfer nötig?</th>
                <td>{% if klo_ki_event.helperRequired %}
                        Ja<br/>
                    <b>Einlass 1:  </b>{{ klo_ki_event.helperEinlassEins ?:  'N/N'  }}<br/>
                    <b>Einlass 2:  </b>{{ klo_ki_event.helperEinlassZwei ?:  'N/N'  }}<br/>
                    <b>Kasse:      </b>{{ klo_ki_event.helperKasse ?:        'N/N'  }}<br/>
                    <b>Springer 1: </b>{{ klo_ki_event.helperSpringerEins ?: 'N/N'  }}<br/>
                    <b>Springer 2: </b>{{ klo_ki_event.helperSpringerZwei ?: 'N/N'  }}<br/>
                        <hr/>
                        {% for helper in klo_ki_event.availableHelpers %}
                            {{ helper }}
                        {% endfor %}
                    {% endif %}
                </td>
            </tr>
            {% if klo_ki_event.parentEvent %}
                <tr>
                    <th>Hauptereignis:</th>
                    <td><a href="{{ path('klo_ki_event_show', {'id': klo_ki_event.parentEvent.id } ) }}">{{ klo_ki_event.parentEvent }}</a></td>
                </tr>
            {% endif %}
        <tr>
            <th>Angelegt von</th>
            <td>{{ klo_ki_event.createdBy }}</td>
        </tr>

        <tr>
            <th>Lichttechniker</th>
            <td>{{ klo_ki_event.lichtTechniker }}</td>
        </tr>
        <tr>
            <th>Tontechniker</th>
            <td>{{ klo_ki_event.tonTechniker }}</td>
        </tr>
        <tr>
            <th>Zuletzt bearbeitet von</th>
            <td>{{ klo_ki_event.updatedBy }}</td>
        </tr>
        <tr>
            <th>Angelegt am</th>
            <td>{{ klo_ki_event.createdAt | localizeddate('full', 'short') }}</td>
        </tr>
        <tr>
            <th>Zuletzt bearbeitet</th>
            <td>{{ klo_ki_event.updatedAt | localizeddate('full', 'short') }}</td>
        </tr>


        </tbody>
    </table>

    {% if klo_ki_event.kontakt %}
        <h2>Kontakt:</h2>
        {{ include('addresse/addresse_kompakt.html.twig', {'addresse': klo_ki_event.kontakt}) }}
    {% endif  %}

    {% if klo_ki_event.ausstattung.count > 0 %}
    <h2>Weitere Ausstattung</h2>
    <ul>
        {%  for a in klo_ki_event.ausstattung  %}
            {# @ var a App\Entity\Ausstattung #}
        <li>{{ a }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if klo_ki_event.bestPlan %}
        <h2>Bestuhlung</h2>
        <a class="js-no-retarget" href="{{ path('getPdf', {'id': klo_ki_event.bestPlan.pdfFilePath}) }}">
            <img alt="Bestuhlungsplan" src="{{ path('getPng', {'id': klo_ki_event.bestPlan.pngFilePath}) }}" />
        </a>
        {{ klo_ki_event.bestPlan }}
    {% endif %}

    {% if klo_ki_event.stageOrder %}
        <h2>Bühnenanweisung</h2>
        <a class="js-no-retarget" href="{{ path('getPdf', {'id': klo_ki_event.stageOrder.pdfFileName}) }}">
            <img alt="Bühnenanweisung" src="{{ path('getPng', {'id': klo_ki_event.stageOrder.pngFileName }) }}" />
        </a>
        {{ klo_ki_event.stageOrder }}
    {% endif %}


    {% if klo_ki_event.childEvents.count > 0 %}
    <h2>Dazugehörige Events</h2>
        <ul>
        {% for event in klo_ki_event.childEvents %}
            <li>
                <a href="{{ path('klo_ki_event_show', {'id': event.id } ) }}">{{ event }}</a>
            </li>
        {% endfor %}
        </ul>

    {% endif %}

    {% if klo_ki_event.bemerkung %}
    <h2>Bemerkung:</h2>
    {{ klo_ki_event.bemerkung | raw }}
    {% endif %}


    {% if is_granted('ROLE_HELPER') %}
        {% if userInHelpers %}
            <form method="post" action="{{ path('klo_ki_event_icannothelp', {'id': klo_ki_event.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('icannothelp' ~ klo_ki_event.id) }}">
                <button class="btn btn-danger">Ich kann doch nicht helfen!</button>
            </form>
            {% else %}
            <form method="post" action="{{ path('klo_ki_event_icanhelp', {'id': klo_ki_event.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('icanhelp' ~ klo_ki_event.id) }}">
                <button class="btn btn-primary">Ich kann helfen!</button>
            </form>
        {% endif %}
    {% endif %}



    {% if is_granted('ROLE_ADMIN') %}
        <hr/>
        <a class="btn btn-primary" href="{{ path('klo_ki_event_edit', {'id': klo_ki_event.id}) }}">
            Bearbeiten
        </a>
    {% endif %}


    {% if klo_ki_event.start %}
    <script>
        if(fullcalendar)
        {
            fullcalendar.gotoDate('{{ klo_ki_event.start | date('Y-m-d') }}');
        }
    </script>
    {% endif%}
