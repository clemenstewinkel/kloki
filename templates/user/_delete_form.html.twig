<form method="post" style="display: inline-block;" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Soll der Benutzer wirklich gelöscht werden?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">Benutzer löschen</button>
</form>
