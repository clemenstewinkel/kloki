{% extends 'base.html.twig' %}

{% block title %}Benutzer{% endblock %}

{% block body %}
    <h1>Benutzer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        {% if user.address %}
            <tr>
                <th>Adresse</th>
                <td>{{ include('addresse/addresse_kompakt.html.twig', {'addresse': user.address}) }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Liste der Benutzer</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Bearbeiten</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
